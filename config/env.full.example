# Unified environment configuration example
# Copy this file to .env and fill in your actual values.
# Sources merged: config/env.template, config/.env.example, docs/ENVIRONMENT_VARIABLES.md

# =============================================================================
# CORE
# =============================================================================
APP_NAME=YouTube AI Platform
APP_TARGET=autonomax
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
VERSION=1.0.0
HOST=0.0.0.0
PORT=8000
NODE_ENV=development

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your_secret_key_here_make_it_long_and_random
ADMIN_SECRET_KEY=your_admin_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION_HOURS=24
# Legacy/optional
APP_SECRET_KEY=your_app_secret_key_here

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./youtube_ai.db
# CLOUD_SQL_INSTANCE=project:region:instance
# DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@/DBNAME?host=/cloudsql/project:region:instance
DATABASE_URL_PROD=postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DBNAME
GROWTH_DATABASE_URL=sqlite:///./growth_engine.db
DATA_DIR=.
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# ORIGINS / CORS
# =============================================================================
FRONTEND_ORIGIN=http://localhost:3000
BACKEND_ORIGIN=http://localhost:8000
SECURITY_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
BACKEND_URL=http://localhost:8000

# =============================================================================
# AI PROVIDERS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
AI_MODEL_NAME=gpt-4
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here
VERTEXAI_PROJECT=your_gcp_project_id
VERTEXAI_LOCATION=us-central1
VERTEXAI_MODEL=gemini-1.5-pro-002
VERTEXAI_FALLBACK_TO_OPENAI=true

OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=gpt-oss:120b-cloud
CHIMERA_DEFAULT_MODE=hybrid
CHIMERA_FALLBACK_TO_CLOUD=true

GOOGLE_TTS_API_KEY=your_google_tts_key_here
DALLE_API_KEY=your_dalle_api_key_here
REPLICATE_API_KEY=your_replicate_api_key_here
SERPER_API_KEY=your_serper_api_key_here
FIGMA_API_KEY=your_figma_api_key_here
MIDJOURNEY_API_KEY=your_midjourney_api_key_here
PRINTBELLE_API_KEY=your_printbelle_api_key_here

# =============================================================================
# YOUTUBE
# =============================================================================
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here
YOUTUBE_API_QUOTA_LIMIT=10000
YOUTUBE_API_QUOTA_WARNING_THRESHOLD=8000
YOUTUBE_UPLOAD_ENABLED=true
YOUTUBE_AUTO_PUBLISH=false
YOUTUBE_DEFAULT_PRIVACY=private

# =============================================================================
# FEATURES / PIPELINE
# =============================================================================
ENABLE_AI_GENERATION=true
ENABLE_AUTO_UPLOAD=false
ENABLE_MONETIZATION_TRACKING=true
ENABLE_ANALYTICS=true

CONTENT_GENERATION_ENABLED=true
THUMBNAIL_GENERATION_ENABLED=true
TITLE_OPTIMIZATION_ENABLED=true
FEATURE_AI_CONTENT_GENERATION=true
FEATURE_THUMBNAIL_GENERATION=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_SUBSCRIPTION_MANAGEMENT=true
FEATURE_AFFILIATE_MARKETING=true
FEATURE_DIGITAL_PRODUCTS=true
VIDEO_PIPELINE_ALLOW_PLACEHOLDERS=false
REVENUE_REAL_ONLY=false

# =============================================================================
# OPS / MONITORING
# =============================================================================
ANALYTICS_ENABLED=true
REAL_TIME_ANALYTICS=true
PERFORMANCE_MONITORING=true
HEALTH_CHECK_INTERVAL=30
CLOUD_RUN_SERVICE=autonomax-api
OPS_RATE_LIMIT_SECONDS=60

# =============================================================================
# PAYMENTS
# =============================================================================
STRIPE_API_KEY=your_stripe_api_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
PAYMENT_STRIPE_SECRET_KEY=your_stripe_secret_key_here
PAYMENT_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

PAYMENT_PAYONEER_API_KEY=your_payoneer_api_key_here
PAYMENT_PAYONEER_SECRET_KEY=your_payoneer_secret_key_here
PAYMENT_PAYONEER_PROGRAM_ID=your_payoneer_program_id_here
PAYONEER_CUSTOMER_ID=your_payoneer_customer_id_here

SHOPIER_APP_MODE=true
SHOPIER_ALLOW_MOCK=false
PAYMENT_SHOPIER_API_KEY=your_shopier_api_key_here
PAYMENT_SHOPIER_API_SECRET=your_shopier_api_secret_here
PAYMENT_SHOPIER_PERSONAL_ACCESS_TOKEN=your_shopier_personal_access_token_here
PAYMENT_SHOPIER_WEBHOOK_TOKEN=your_shopier_webhook_token_here
SHOPIER_API_KEY=your_shopier_api_key_here
SHOPIER_API_SECRET=your_shopier_api_secret_here
SHOPIER_PERSONAL_ACCESS_TOKEN=your_shopier_personal_access_token_here
SHOPIER_WEBHOOK_TOKEN=your_shopier_webhook_token_here

# =============================================================================
# SUBSCRIPTIONS
# =============================================================================
BASIC_PLAN_PRICE=9.99
PRO_PLAN_PRICE=29.99
ENTERPRISE_PLAN_PRICE=99.99

# =============================================================================
# STORAGE
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_STORAGE_BUCKET=your_bucket_name_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_CLOUD_CREDENTIALS_FILE=path/to/credentials.json

STORAGE_PROVIDER=gcs
STORAGE_GCS_BUCKET=your_gcs_bucket_here

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

UPLOAD_DIR=./uploads
THUMBNAIL_DIR=./thumbnails
AUDIO_DIR=./audio
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=mp4,avi,mov,wmv,flv,webm

# =============================================================================
# CACHE / RATE LIMITING
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_URL_PROD=redis://prod-host:6379
CACHE_ENABLED=false
CACHE_TTL=300
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============================================================================
# EMAIL
# =============================================================================
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
SMTP_APP_PASSWORD=your_app_password_here
DELIVERY_FROM_EMAIL=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
GOOGLE_ANALYTICS_ID=your_ga_id_here
LOOKER_ACTION_TOKEN=
LOOKER_ACTION_MODE=execute
AUTONOMAX_API_URL=
AUTONOMAX_API_KEY=
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here

# =============================================================================
# BIZOP / KPI
# =============================================================================
BIZOP_AUTO_SYNC=true
# BIZOP_DATA_ROOT=/absolute/path/to/docs
KPI_TARGETS_PATH=backend/config/kpi_targets.json
# KPI_ACTUAL_<ID>=<value>

# =============================================================================
# BACKUP
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups

# =============================================================================
# BIGQUERY (optional)
# =============================================================================
BIGQUERY_AUDIT_ENABLED=true
BIGQUERY_PROJECT=your_bigquery_project
BIGQUERY_DATASET=profit_os

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
RELOAD_ON_CHANGE=true
AUTO_MIGRATE_DB=true
MOCK_EXTERNAL_APIS=false

# =============================================================================
# FRONTEND BUILD-TIME (optional)
# =============================================================================
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000
