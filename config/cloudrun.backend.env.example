ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0

# Core (provided via Secret Manager)
# SECRET_KEY -> youtube-ai-secret-key
# DATABASE_URL -> youtube-ai-database-url

# Cloud SQL (optional)
# CLOUD_SQL_INSTANCE=project:region:instance
# DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@/DBNAME?host=/cloudsql/project:region:instance

# CORS
SECURITY_CORS_ORIGINS=["https://REPLACE_WITH_FRONTEND_URL"]
FRONTEND_ORIGIN=https://REPLACE_WITH_FRONTEND_URL
BACKEND_ORIGIN=https://REPLACE_WITH_BACKEND_URL

# Shopier app mode
SHOPIER_APP_MODE=true
# PAYMENT_SHOPIER_API_KEY -> youtube-ai-shopier-api-key
# PAYMENT_SHOPIER_API_SECRET -> youtube-ai-shopier-api-secret
# SHOPIER_PERSONAL_ACCESS_TOKEN -> youtube-ai-shopier-access-token
# SHOPIER_WEBHOOK_TOKEN -> youtube-ai-shopier-webhook-token

# AutonomaX external API (optional)
AUTONOMAX_API_URL=https://autonomax-api-71658389068.us-central1.run.app
# AUTONOMAX_API_KEY -> (set in Secret Manager if required)

# Ollama (external GPU host)
OLLAMA_URL=http://REPLACE_WITH_OLLAMA_HOST:11434/api/generate
OLLAMA_MODEL=gpt-oss:120b-cloud
CHIMERA_DEFAULT_MODE=local
CHIMERA_FALLBACK_TO_CLOUD=false

# Optional AI provider keys (only if you want cloud fallback)
# OPENAI_API_KEY -> youtube-ai-openai-api-key
# GEMINI_API_KEY -> youtube-ai-gemini-api-key
# GROQ_API_KEY -> youtube-ai-groq-api-key

# YouTube API
# YOUTUBE_CLIENT_ID -> youtube-ai-youtube-client-id
# YOUTUBE_CLIENT_SECRET -> youtube-ai-youtube-client-secret
# YOUTUBE_REFRESH_TOKEN -> youtube-ai-youtube-refresh-token

# BizOp ingestion
BIZOP_AUTO_SYNC=true
# BIZOP_DATA_ROOT=/app/docs
