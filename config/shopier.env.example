# Shopier app mode example configuration

ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Local database for quick start (override for production)
DATABASE_URL=sqlite:///./youtube_ai.db

# Origins
BACKEND_ORIGIN=http://localhost:8000
FRONTEND_ORIGIN=http://localhost:8000
SECURITY_CORS_ORIGINS=["http://localhost:8000"]

# Serve the Shopier storefront as the app root
SHOPIER_APP_MODE=true

# Shopier payment configuration
PAYMENT_SHOPIER_API_KEY=your_shopier_api_key_here
PAYMENT_SHOPIER_API_SECRET=your_shopier_api_secret_here
SHOPIER_PERSONAL_ACCESS_TOKEN=your_shopier_personal_access_token
SHOPIER_WEBHOOK_TOKEN=your_shopier_webhook_token
