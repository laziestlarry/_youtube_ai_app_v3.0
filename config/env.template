# YouTube AI Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# OpenAI API Key (Required for AI content generation)
OPENAI_API_KEY=your_openai_api_key_here

# YouTube API Credentials (Required for YouTube integration)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# Secret key for JWT tokens and session management
SECRET_KEY=your_secret_key_here_make_it_long_and_random

# JWT token expiration (in hours)
JWT_EXPIRATION_HOURS=24

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./youtube_ai.db
# Cloud SQL (optional)
# CLOUD_SQL_INSTANCE=project:region:instance
# DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@/DBNAME?host=/cloudsql/project:region:instance

# Database connection pool size
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (True for development, False for production)
DEBUG=True

# Application version
VERSION=1.0.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# CORS origins (comma-separated or JSON list)
SECURITY_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# AI model settings
AI_MODEL_NAME=gpt-4
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# Content generation settings
CONTENT_GENERATION_ENABLED=True
THUMBNAIL_GENERATION_ENABLED=True
TITLE_OPTIMIZATION_ENABLED=True

# =============================================================================
# YOUTUBE API SETTINGS
# =============================================================================

# YouTube API quota management
YOUTUBE_API_QUOTA_LIMIT=10000
YOUTUBE_API_QUOTA_WARNING_THRESHOLD=8000

# YouTube upload settings
YOUTUBE_UPLOAD_ENABLED=True
YOUTUBE_AUTO_PUBLISH=False
YOUTUBE_DEFAULT_PRIVACY=private

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Analytics enabled
ANALYTICS_ENABLED=True
REAL_TIME_ANALYTICS=True

# Performance monitoring
PERFORMANCE_MONITORING=True
HEALTH_CHECK_INTERVAL=30

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# PAYMENT & SUBSCRIPTION
# =============================================================================

# Stripe configuration (for payments)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Subscription plans
BASIC_PLAN_PRICE=9.99
PRO_PLAN_PRICE=29.99
ENTERPRISE_PLAN_PRICE=99.99

# =============================================================================
# FILE STORAGE
# =============================================================================

# =============================================================================
# BIZOP INGESTION
# =============================================================================

# Auto-ingest Alexandria biz opportunities on startup
BIZOP_AUTO_SYNC=true
# BIZOP_DATA_ROOT=/absolute/path/to/docs (defaults to ./docs)

# File upload settings
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=mp4,avi,mov,wmv,flv,webm

# Storage paths
UPLOAD_DIR=./uploads
THUMBNAIL_DIR=./thumbnails
AUDIO_DIR=./audio

# =============================================================================
# CACHING
# =============================================================================

# Redis configuration (optional, for caching)
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=False
CACHE_TTL=300

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================

# Email configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
EMAIL_ENABLED=False
DELIVERY_FROM_EMAIL=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Looker Actions (optional)
LOOKER_ACTION_TOKEN=
LOOKER_ACTION_MODE=execute

# AutonomaX External API
AUTONOMAX_API_URL=
AUTONOMAX_API_KEY=

# Google Cloud (optional, for advanced features)
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_CREDENTIALS_FILE=path/to/credentials.json

# AWS S3 (optional, for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development-specific settings
RELOAD_ON_CHANGE=True
AUTO_MIGRATE_DB=True
MOCK_EXTERNAL_APIS=False

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
FEATURE_AI_CONTENT_GENERATION=True
FEATURE_THUMBNAIL_GENERATION=True
FEATURE_ANALYTICS_DASHBOARD=True
FEATURE_SUBSCRIPTION_MANAGEMENT=True
FEATURE_AFFILIATE_MARKETING=True
FEATURE_DIGITAL_PRODUCTS=True

# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup settings
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups 
